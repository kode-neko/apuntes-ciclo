<header class="p-3 pt-3 bg-dark rounded-2 d-flex justify-content-between align-items-center">
  <div>
    <a
      href="/"
      class="d-flex align-items-center text-light text-decoration-none"
    >
      <i class="bi bi-journals me-2" style="font-size: 42px"></i>
      <span class="fs-4">{{t "title.main"}}</span>
    </a>
  </div>
  <div class="d-md-flex justify-content-end align-items-center">
    <div class="d-flex justify-content-start align-items-center">
      <div><a
          class="link-light me-3 fs-3"
          href="{{urlSet 'mail'}}"
          target="_blank"
        ><i class="bi bi-envelope-fill"></i></a></div>
      <div><a
          class="link-light me-3 fs-3"
          href="{{urlSet 'github'}}"
          target="_blank"
        ><i class="bi bi-github"></i></a></div>
      <div><a
          class="link-light me-3 fs-3"
          href="{{urlSet 'twitter'}}"
          target="_blank"
        ><i class="bi bi-twitter"></i></a></div>
    </div>
    <div>
      <div class="dropdown">
        <a
          class="btn btn-light dropdown-toggle"
          href="#"
          role="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <i class="bi bi-globe2 me-2"></i>
          {{t "btn.change-lang"}}
        </a>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="{{urlSet 'lang'}}/es">{{t
                "labels.spanish"
              }}</a></li>
          <li><a class="dropdown-item" href="{{urlSet 'lang'}}/en">{{t
                "labels.english"
              }}</a></li>
        </ul>
      </div>
    </div>
  </div>
</header>